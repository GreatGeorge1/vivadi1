extends template

include map/map
block head
    head
        title= "Vivadi"
        meta(charset="utf-8")
        
        meta(content="Yehor Illarionov" name="author")
        meta(content="Floor catalog" name="description")
        
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(name="HandheldFriendly" content="true")
        meta(content="IE=edge" http-equiv="X-UA-Compatible")

            
        // build:css css/vendor.css
        link(rel="stylesheet", href="libs/mdi/css/materialdesignicons.min.css")
        // endbuild
        
        // build:css css/main.css
        link(rel="stylesheet", href="css/main.css")
        link(rel="stylesheet", href="css/contacts.css")
        // endbuild

block header
    +head-line()
    +header({
        "menu": [
        {
            "text": "Главная",
            "href": "index.html"
        },
        {
            "text": "Товары",
            "href": "category.html"
        },
        {
            "text": "О компании",
            "href": "about.html"
        },
        {
            "text": "Новости",
            "href": "index.html"
        },
        {
            "text": "Контакты",
            "href": "contacts.html",
            "active": 1
        }
        ]
    })

block content
    +b.DIV.contacts
        +b.SECTION.section_light
            +e.DIV.container
                    +e.DIV.name 
                        p.namefont Контактные данные
                    +e.DIV.container2
                        +e.P.text 
                            |Город
                            br
                            |Адрес
                            br
                            
                            |Телефон
                            br
                            
                            |Телефон
                            br
                            
                            |Почта
                            br
                            
                            |Почта
                        +map()

block scripts
                // build:js js/main.js
                script( src="js/main.js")
                script(async, defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBkJ_CQGHEf1ZBI8NpKJJF0CTfmMh32jEk&callback=initMap")
